
create table jianshu_user(
   uid varchar(100) not null,
   nickname VARCHAR(100),
   head_pic varchar(500),
   gender varchar(100),
   following_num int,
   follower_num int,
   articles_num int,
   words_num int,
   beliked_num int,
   PRIMARY KEY ( uid )
);


create table jianshu_user_relation(
	uid varchar(100) not null,
	follower_uid varchar(100) not null,
	primary key(uid,follower_uid)		
)ENGINE=MyISAM;

